
@{
    ViewBag.Title = "LogIn";
}

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="control-label col-sm-2">Login</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="text" placeholder="Login" required ng-model="form.login" ng-disabled="roles">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Hasło:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" placeholder="Hasło">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Zaloguj</button>
        </div>
    </div>
</form>

